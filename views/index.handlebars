{{!-- Page heading --}}
<h1>Welcome to Good Burger, home of the Good Burger</h1>


{{!-- Available burgers --}}

<h2>Available burgers</h2>
<ul>
    {{#each burgers}} 
        {{#unless eaten}} 
            {{> burgers/burger-block neweaten=true}}
        {{/unless}}
    {{/each}}
</ul>


{{!-- Eaten burgers --}}

<h2>Burgers in the belly!</h2>
<ul>
    {{#each burgers}}
        {{#if eaten}}
            {{> burgers/burger-block neweaten=false}}
        {{/if}}
    {{/each}}
</ul>



{{!-- Add a burger --}}
<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group burgerName">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Has this already been devoured?</label><br>
        <input type="radio" name="eaten" value="1" checked> Devoured! <br>
        <input type="radio" name="eaten" value="0"> Ready to eat!
    </div>

    <button type="submit">Add burger</button>
</form>
